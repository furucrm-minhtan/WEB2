<form>
	<h4 class="text-center">Add Theater</h4>
	<div class="row mt-5">
		<div class="col-12">
			<label>Name</label>
			<input class="form-control" type="text" x-model="theater.data.name">
		</div>
	</div>
	<div class="row mt-5">
		<div class="col-12 col-md-6">
			<label>Type</label>
			<select class="custom-select" x-model="theater.data.type">
				<template>

				</template>
			</select>
		</div>
		<div class="col-12 col-md-6">
			<label>Group</label>
			<select class="custom-select" x-model="theater.data.group">
				<template x-for="(group, index) in group.listView">

				</template>
			</select>
		</div>
	</div>
	<div class="text-center mt-5">
		<input class="btn btn-primary px-5" type="submit" value="Add Theater" @click="updateProfile($event)">
	</div>
</form>