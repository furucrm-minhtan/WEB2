<form id="showtime-form" class="needs-validation" novalidate>
	<h4 class="text-center">Add Show Time</h4>
	<div class="row mt-2">
		<div class="col-12">
			<label>Date</label>
			<input class="form-control" type="date" x-model="showTime.data.date" required/>
			<div class="invalid-feedback">Date is required</div>
		</div>
	</div>
	<div class="row mt-2">
		<div class="col-12 col-md-6">
			<label>Start Time</label>
			{{!-- <input class="form-control" type="time" x-model="showTime.data.start" required/> --}}
			<select id="start-time" class="custom-select" x-model="showTime.data.start" required>
				<option value="">--None--</option>
				<template x-for="(item, index) in showTime.rangeTime">
					<option x-bind:value="item" x-text="item"></option>
				</template>
			</select>
			<div class="invalid-feedback">Rows is required</div>
		</div>
		<div class="col-12 col-md-6">
			<label>End Time</label>
			{{!-- <input class="form-control" type="time" x-model="showTime.data.end" required/> --}}
			<select id="end-time" class="custom-select" x-model="showTime.data.end" required>
				<option value="">--None--</option>
				<template x-for="(item, index) in showTime.rangeTime">
					<option x-bind:value="item" x-text="item"></option>
				</template>
			</select>
			<div class="invalid-feedback">End Time is required</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<label>Price</label>
			<input class="form-control" type="number" x-model="showTime.data.price" required/>
			<div class="invalid-feedback">Price is required</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12 col-md-6">
			<label>Movie</label>
			<select class="custom-select" x-model="showTime.data.movieId" required>
				<option value="">--None--</option>
				<template x-for="(item, index) in movie.listView">
					<option x-bind:value="item.id" x-text="item.name"></option>
				</template>
			</select>
			<div class="invalid-feedback">Movie is required</div>
		</div>
		<div class="col-12 col-md-6">
			<label>Room</label>
			<select class="form-control" x-model="showTime.data.roomId" required>
				<option value="">--None--</option>
				<template x-for="(item, index) in room.listView">
					<option x-bind:value="item.id" x-text="item.name"></option>
				</template>
			</select>
			<div class="invalid-feedback">Room is required</div>
		</div>
	</div>
</form>