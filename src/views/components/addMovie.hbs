<div class="mx-2">
    <form>
        <h4 class="text-center">Add Category For Movie</h4>
        <div class="row mt-5">
            <div class="col-12 col-md-6 mx-auto">
                <label>Name</label>
                <input class="form-control" type="text" x-model="categoryForm.name">
            </div>
        </div>
        <div class="text-center mt-5">
            <input type="submit" class="btn btn-primary px-5" value="Add Category" />
        </div>
    </form>

    <table class="mx-5" id="list-category" class="table" width="100%">
        <thead>
            <tr>
                <th class="th-sm">Name</th>
                <th class="th-sm">Level</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Tiger Nixon</td>
                <td>System Architect</td>
            </tr>
        </tbody>
    </table>

    <hr/>

    <form action="#" class="mt-5">
        <h4 class="text-center">Add Movie For Theater</h4>
        <div class="row mt-5">
            <div class="col-12 col-md-6">
                <label>Name</label>
                <input class="form-control" type="text" x-model="movie.data.name">
            </div>
            <div class="col-12 col-md-6">
                <label for="category">category</label>
                <select id="category" class="custom-select" x-model="movie.data.category"></select>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12 col-md-6">
                <label id="">Poster</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="upload-poster">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="poster"
                            aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="poster">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <label for="trailer">Movie Trailer</label>
                <input id="trailer" class="form-control " type="text" x-model="movie.data.address" />
            </div>
        </div>
        <div class="form-group">
            <label for="describe">Describe</label>
            <textarea id="describe" class="form-control" rows="10" x-model="movie.data.describe"></textarea>
        </div>
        <div class="row mt-5">
            <div class="col-12 col-md-6">
                <label for="director">Director</label>
                <input id="director" class="form-control " type="text" x-model="movie.data.address" />
            </div>
            <div class="col-12 col-md-6">
                <label for="writer">Writer</label>
                <input id="writer" class="form-control" type="text" x-model="movie.data.address" />
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12 col-md-6">
                <label for="MMPA_rate">MMPA Rating</label>
                <input id="MMPA_rate" class="form-control" type="date" x-model="movie.data.address" />
            </div>
            <div class="col-12 col-md-6">
                <label for="publish">Publish</label>
                <input id="director" class="form-control" type="date" x-model="movie.data.address" />
            </div>
        </div>
        <div class="text-center mt-5">
            <input class="btn btn-primary px-5" type="submit" value="Add Movie" @click="changePassword($event)">
        </div>
    </form>

    <table class="mx-5" id="list-movie" class="table" width="100%">
        <thead>
            <tr>
                <th class="th-lg">Name</th>
                <th class="th-sm">Describe</th>
                <th class="th-sm">Directer</th>
                <th class="th-sm">Writer</th>
                <th class="th-sm">MMPA Rating</th>
                <th class="th-sm">Publish</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Tiger Nixon</td>
                <td>System Architect</td>
                   <td>Tiger Nixon</td>
                <td>System Architect</td>
                   <td>Tiger Nixon</td>
                <td>System Architect</td>
            </tr>
        </tbody>
    </table>
</div>

{{#contentFor 'scripts' }}
<script>
    $(document).ready(function () {
        $('#list-category').DataTable();
        $('.dataTables_length').addClass('bs-select');

        $('#list-movie').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
{{/contentFor  }}