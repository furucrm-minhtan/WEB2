<form id="room-form" class="needs-validation" novalidate>
	<h4 class="text-center">Add Room</h4>
	<div class="row mt-2">
		<div class="col-12">
			<label for="room-name">Name</label>
			<input id="room-name" class="form-control" type="text" x-model="room.data.name" required/>
			<div class="invalid-feedback">Name is required</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12 col-md-6">
			<label for="row-room">Rows</label>
			<select id="row-room" class="custom-select" x-model="room.data.rows" required>
				<option value="">--None--</option>
				<template x-for="(item, index) in createArray(7)" :key="index">
					<option x-bind:value="index + 1" x-text="index + 1"></option>
				</template>
			</select>
			<div class="invalid-feedback">Rows is required</div>
		</div>
		<div class="col-12 col-md-6">
			<label for="col-room">Columns</label>
			<select id="col-room" class="custom-select" x-model="room.data.columns" required>
				<option value="">--None--</option>
				<template x-for="(item, index) in createArray(9)" :key="index">
					<option x-bind:value="index + 1" x-text="index + 1"></option>
				</template>
			</select>
			<div class="invalid-feedback">Columns is required</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<label for="theater-room">Theater</label>
			<select id="theater-room" class="custom-select" x-model="room.data.theaterId" required>
				<option value="">--None--</option>
				<template x-for="(item, index) in theater.listView" :key="index">
					<option x-bind:value="item.id" x-text="item.name"></option>
				</template>
			</select>
			<div class="invalid-feedback">Theater is required</div>
		</div>
	</div>
</form>