<form>
    <h4 class="text-center">Add Category For Movie</h4>
    <div class="row mt-5">
        <div class="col-12 col-md-6 mx-auto">
            <label>Name</label>
            <input class="form-control" type="text" x-model="category.data.name">
        </div>
        <div class="col-12 col-md-6 mx-auto">
            <label>Level</label>
            <input class="form-control" type="text" x-model="category.data.level">
        </div>
    </div>
    <div class="text-center mt-5">
        <button class="btn btn-primary px-5" @click="category.create($event)">
           Submit
        </button>
    </div>
</form>