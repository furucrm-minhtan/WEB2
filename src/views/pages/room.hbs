<script>
    function init() {
        const groups = JSON.parse('{{{ groups }}}');
        const theaters = JSON.parse('{{{ theaters }}}');

        return {
            groupSelected: '',
            theaterSelected: '',
            seats: [],
            rooms: [],
            groups,
            theaters,
            bookingSeat(seat, movie) {
                axios.post('/ticket', { seat, movie })
                    .then(() => {
                        alert('success');
                    })
                    .catch(() => {
                        alert('falied')
                    });
            },
            fetchGroups() {
                fetch('/group-theater')
                    .then((raw) => raw.json())
                    .then((response) => {
                        if(response.isSucess) {
                            this.listGroup = response.data;
                        }
                    })
                    .catch((error) => {
                        console.log(error);
                    })
            },
            fetchTheaters() {
                fetch('/theater')
                    .then((raw) => raw.json())
                    .then((response) => {
                        if(response.isSucess) {
                            this.listTheater = response.data;
                        }
                    })
                    .catch((error) => {
                        console.log(error);
                    });
            },
            fetchRooms() {
                fetch(`/${theaterSelected}?movie={{id}}`)
                    .then((raw) => raw.json())
                    .then((response) => {
                        if(response.isSucess) {
                            this.rooms = response.data;
                        } 
                    })
            }
        }
    }
</script>